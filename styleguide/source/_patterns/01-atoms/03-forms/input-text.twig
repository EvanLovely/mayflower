<label 
  for="{{ inputText.id }}"
  class="ma__label {{ inputText.required ? 'ma__label--required' : 'ma__label--optional'}}">{{inputText.labelText}}</label>
<input 
  class="ma__input {{ inputText.required ? 'js-is-required' : ''}}" 
  name="{{ inputText.name }}" 
  id="{{ inputText.id }}" 
  type="{{ inputText.type }}" 
  placeholder="{{ inputText.placeholder }}" 
  data-type="{{ inputText.type }}"
  {% if inputText.width %}
    style="width: {{ inputText.width }}px" 
  {% endif %}
  {{ inputText.required ? 'required' : '' }} />
