
{% if formRequirement.richText %}
  <section class="ma__form-requirements">
    <div class="ma__form-requirements__container">
      {% if formRequirement.rteTitle %}
        {% set columnHeading = formRequirement.rteTitle %}
        {% include "@atoms/04-headings/column-heading.twig" %}
      {% endif %}
      {% set richText = formRequirement.richText %}
      {% include "@organisms/by-author/rich-text.twig" %}
      {% if formRequirement.payment %}
        <div class="ma__form-requirements__payment">
          {% set columnHeading = formRequirement.payment.title %}
          {% include "@atoms/04-headings/column-heading.twig" %}
          {% set locationIcons = formRequirement.payment.locationIcons %}
          {% include "@molecules/location-icons.twig" %}
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
